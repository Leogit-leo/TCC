<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"> 
    <title> 4Beaulty</title>
    <style>
body{
	margin: 0;
	padding: 0;
	background: #fff;
	color: #fff;
	font-family: Arial;
	font-size: 12px;
}

.body{
	position: absolute;
	top: -20px;
	left: -20px;
	right: -40px;
	bottom: -40px;
	width: auto;
	height: auto;
	/*background-image: url(http://ginva.com/wp-content/uploads/2012/07/city-skyline-wallpapers-008.jpg);*/
    background: #3b3949;
	background-size: cover;
	-webkit-filter: blur(5px);
	z-index: 0;
}

.grad{
	position: absolute;
	top: -20px;
	left: -20px;
	right: -40px;
	bottom: -40px;
	width: auto;
	height: auto;
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(0,0,0,0)), color-stop(100%,rgba(0,0,0,0.65))); /* Chrome,Safari4+ */
	z-index: 1;
	opacity: 0.7;
}

.header{
	position: absolute;
	top: calc(50% - 35px);
	left: calc(50% - 255px);
	z-index: 2;
}

.header div{
	float: left;
	color: #ffc000;
	font-family: 'Exo', sans-serif;
	font-size: 35px;
	font-weight: 200;
}

.header div span{
	color: #ccff33 !important;
}

.login{
	position: absolute;
	top: calc(50% - 75px);
	left: calc(50% - 50px);
	height: 150px;
	width: 350px;
	padding: 10px;
	z-index: 2;
}

.login input[type=text]{
	width: 250px;
	height: 30px;
	background: transparent;
	border: 1px solid rgba(255,255,255,0.6);
	border-radius: 2px;
	color: #fff;
	font-family: 'Exo', sans-serif;
	font-size: 16px;
	font-weight: 400;
	padding: 4px; 
}

.login input[type=password]{
	width: 250px;
	height: 30px;
	background: transparent;
	border: 1px solid rgba(255,255,255,0.6);
	border-radius: 2px;
	color: #fff;
	font-family: 'Exo', sans-serif;
	font-size: 16px;
	font-weight: 400;
	padding: 4px;
	margin-top: 10px;
}

.login input[type=button]{
	width: 260px;
	height: 35px;
	background: #fff;
	border: 1px solid #fff;
	cursor: pointer;
	border-radius: 2px;
	color: #a18d6c;
	font-family: 'Exo', sans-serif;
	font-size: 16px;
	font-weight: 400;
	padding: 6px;
	margin-top: 10px;
}

.login input[type=button]:hover{
	opacity: 0.8;
}

.login input[type=button]:active{
	opacity: 0.6;
}

.login input[type=text]:focus{
	outline: none;
	border: 1px solid rgba(255,255,255,0.9);
}

.login input[type=password]:focus{
	outline: none;
	border: 1px solid rgba(255,255,255,0.9);
}

.login input[type=button]:focus{
	outline: none;
}
.botao-admin-logar{
        width: 262px;
    padding-top: 10px;
    margin-top: 13px;
        padding-bottom: 11px;
}

::-webkit-input-placeholder{
   color: rgba(255,255,255,0.6);
}

::-moz-input-placeholder{
   color: rgba(255,255,255,0.6);
}
    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prefixfree/1.0.7/prefixfree.min.js"></script>
    <!--toat-->
    <link href="~/Content/Admin/toast/toastr.min.css" rel="stylesheet" />
</head>
<body>
    <div class="body"></div>
    <div class="grad"></div>    
    <div class="header">
        <div>
            <img class="img-responsive" style="height:75px" src="~/Content/Site/img/logo-4beauty.png" />
        </div>
        @*<div>4<span>Beauty</span></div>*@ 
      
    </div>
    <br>
    <div class="login">
        <form class="form-ajx" action="@Url.Action("LogarNoSistema","Login")" method="post">

            <input type="text" placeholder="Usuário" name="Login"><br>
            <input type="password" placeholder="Senha" name="Senha"><br>
            <input type="submit"  value="Logar" class="botao-admin-logar">
          
        </form>
    </div>
    <script src="~/Content/Site/js/jquery-1.10.2.min.js"></script>

   
    <!--toast e validacao jquery-->

    <script src="~/Content/Admin/toast/toastr.min.js"></script>

    <script src="~/Content/Admin/toast/jquery.validate.min.js"></script>
    <script src="~/Content/Admin/toast/jqueryFormAjax.js"></script>
    <script src="~/Content/Admin/toast/formAjaxInit.js"></script>

</body>
</html>
