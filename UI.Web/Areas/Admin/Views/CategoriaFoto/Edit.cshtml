@model Aplicacao.Core.Dominio.CategoriaFoto
@{
    Layout = "../Shared/Layout.cshtml";
    ViewBag.Title = "CategoriaFoto";
    var Status = ViewBag.Status as List<Aplicacao.Core.Dominio.Status>;

}
@using (Html.BeginForm("Edit", "CategoriaFoto", FormMethod.Post, new { @class = "form-ajx" }))
{
    @Html.HiddenFor(x => x.CategoriaFotoId)

    <div class="panel panel-white">
        <div class="panel-heading clearfix">
            <h4 class="panel-title">Editar @ViewBag.TitulosForm</h4>
        </div>
        <div class="panel-body">
            <div class="box-inner">
                <div class="box-content">

                    <div class="form-group col-md-12">
                        <div class="editor-label">
                            @Html.LabelFor(model => model.Status)
                        </div>
                        @Html.DropDownListFor(model => model.StatusId, new SelectList(Status, "StatusId", "Nome"), new { @class = "form-control" })
                    </div>

                    <div class="form-group col-md-12">
                        <div class="editor-label">
                            @Html.LabelFor(model => model.Nome)
                        </div>
                        <div class="editor-field">
                            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => Model.Nome)
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <button type="submit" class="btn btn-success btn-block">Salvar</button>
                        </div>
                        <div class="col-md-4">
                            @Html.ActionLink("Cancelar", "Index", "CategoriaFoto", new object { }, new { @class = "btn btn-danger btn-block" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@Scripts.Render("~/bundles/jqueryval")

<script type="text/javascript">
    var UrlDestino = '@Url.Action("Index")';
</script>