@model Aplicacao.Core.Dominio.Servico
@{
    Layout = "../Shared/Layout.cshtml";
    ViewBag.Title = "Serviço";
    var Status = ViewBag.Status as List<Aplicacao.Core.Dominio.Status>;
}
@using (Html.BeginForm("Create", "Servico", FormMethod.Post, new { @class = "form-ajx" }))
{
    <div class="panel panel-white">
        <div class="panel-heading clearfix">
            <h4 class="panel-title">Cadastrar @ViewBag.TitulosForm</h4>
        </div>
        <div class="panel-body">
            <div class="box-inner">
                <div class="box-content">
                    <div class="form-group col-md-6">
                        <div class="editor-label">
                            @Html.LabelFor(model => model.Status)
                        </div>
                        <div class="editor-field">
                            @Html.DropDownListFor(model => model.StatusId ,  new SelectList(Status, "StatusId", "Nome")  ,new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <div class="editor-label">
                            @Html.LabelFor(model => model.Nomeservico)
                        </div>
                        <div class="editor-field">
                            @Html.TextBoxFor(model => model.Nomeservico, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => Model.Nomeservico)
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <div class="editor-label">
                            @Html.LabelFor(model => model.Preco)
                        </div>
                        <div class="editor-field">
                          <input type="text" name="Preco" class="form-control" id="valor"/>
                            @Html.ValidationMessageFor(model => Model.Preco)
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <div class="editor-label">
                            @Html.LabelFor(model => model.TempoGasto)
                        </div>
                        <div class="editor-field">
                          
                            @Html.TextBoxFor(model => model.TempoGasto, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => Model.TempoGasto)
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <button type="submit" class="btn btn-success btn-block">Salvar</button>
                        </div>
                        <div class="col-md-4">
                            @Html.ActionLink("Cancelar", "Index", "Servico", new object { }, new { @class = "btn btn-danger btn-block" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
 </div>   
}

@Scripts.Render("~/bundles/jqueryval")

<script type="text/javascript">
    var UrlDestino = '@Url.Action("Index")';
</script>