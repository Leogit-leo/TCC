    <script src="~/Content/Plugin/toast/toastr.min.js"></script>
    <script src="~/Content/Plugin/toast/jquery.validate.min.js"></script>
    <script src="~/Content/Plugin/toast/jqueryFormAjax.js"></script>
    <script src="~/Content/Plugin/toast/formAjaxInit.js"></script>

    <script>
		jQuery(document).ready(function() {
			App.setPage("login");  //Set current page
			App.init(); //Initialise plugins and elements
		});
    </script>
    <script type="text/javascript">
		function swapScreen(id) {
			jQuery('.visible').removeClass('visible animated fadeInUp');
			jQuery('#'+id).addClass('visible animated fadeInUp');
		}
    </script>
