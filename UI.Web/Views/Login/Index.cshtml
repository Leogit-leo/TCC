<body class="login cor-fundo-logo" style="background: #363442">
    <!-- PAGE -->
    <section id="page">
        <!-- HEADER -->
        <header>
            <!-- NAV-BAR -->
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <div id="logo">
                            <a href="index.html"><img src="~/Content/Site/img/logo-4beauty.png" height="40" alt="logo name" /></a>
                        </div>
                    </div>
                </div>
            </div>
            <!--/NAV-BAR -->
        </header>
        <!--/HEADER -->
        <!-- LOGIN -->
        <section id="login" class="visible">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="login-box-plain">
                            <h2 class="bigintro">Funcionarios</h2>
                            <div class="divide-40"></div>
                            <form action="@Url.Action("LogarFuncionario","Login")" method="post" class="form-ajx">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Usuario</label>
                                    <i class="fa fa-user"></i>
                                    <input type="text" class="form-control" name="Login">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Senha</label>
                                    <i class="fa fa-lock"></i>
                                    <input type="password" class="form-control" name="Senha">
                                </div>
                                <div class="form-actions">
                                    <label class="checkbox"> <input type="checkbox" class="uniform" value=""> Relembrar Senha</label>
                                    <button type="submit" class="btn btn-danger" style="background:#a889bf; border:#a889bf;">Logar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--/LOGIN -->
      
    </section>
    <!--/PAGE -->
    <!-- JAVASCRIPTS -->
    <!-- Placed at the end of the document so the pages load faster -->
    <!-- JQUERY -->
