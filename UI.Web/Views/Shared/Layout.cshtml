    <script>
        //fullCalendar

    var usuarioId = '@usuario.FuncionarioId';

    $('#calendar').fullCalendar({

        header: { center: 'month,agendaWeek,agendaDay' },

        timezone: 'local',
        events: {
            url: '@Url.Action("HorarioAgendado", "Home", new { id = usuario.FuncionarioId})',
           
        },

        eventRender: function (event, element) {

            element.click(function () {

                $("#startmodalfuncionario").modal();
                $("#idagenda").val(event.id);
                $("#idagendaexcluir").val(event.id);
                $("#funcionarioSelecionado").val(event.funcionarioSelecionado);
                $("#nomefuncionarioSelecionado").html(event.nomefuncionarioSelecionado);
                $("#dataAgendamento").val(event.dataAgendamento);
                $("#textodataAgendamento").html(event.dataAgendamento);
                $("#inicio").val(event.start.format('HH:mm'));
                $("#textoinicio").html(event.start.format('HH:mm'));
                $("#fim").val(event.end.format('HH:mm'));
                $("#textofim").html(event.end.format('HH:mm'));

                    if (event.servicoPago == false) {
                        //document.getElementById('servicopago').value = 'false';
                        $("#textoservicopago").html(event.servicoestapago);

                    } else {
                       // document.getElementById('servicopago').value = 'true';
                        $("#textoservicopago").html(event.servicoestapago);
                    }

                    $("#servicoSetado").val(event.servicoSelecionado);
                    $("#nomeservicoSelecionado").html(event.nomeservicoSelecionado);

                $("#clienteSelecionado").val(event.clienteSelecionado);
                $("#nomeclienteSelecionado").html(event.nomeclienteSelecionado);
               

                loadServicosFuncionarios(event.funcionarioSelecionado, event.servicoSelecionado);

            })

        }
    });
    </script>

    <script>
        function loadServicosFuncionarios(val, idServico) {
           
        $.get('@Url.Action("LoadServicoFuncionario", "Home")', 'idFuncionario=' + val + '&idServico=' + idServico, function (data) {
            $('#serv-fun').html(data);
        })
        }
    </script>




